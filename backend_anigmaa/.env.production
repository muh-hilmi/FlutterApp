# Production Server Configuration
PORT=8080
ENV=production
LOG_LEVEL=info

# Database Configuration (Production)
# Replace with your production database values
DB_HOST=YOUR_PRODUCTION_DB_HOST
DB_PORT=5432
DB_USER=YOUR_PRODUCTION_DB_USER
DB_PASSWORD=YOUR_PRODUCTION_DB_PASSWORD
DB_NAME=anigmaa_prod
DB_SSLMODE=require
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration (Production)
REDIS_HOST=YOUR_PRODUCTION_REDIS_HOST
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_PRODUCTION_REDIS_PASSWORD
REDIS_DB=0

# JWT Configuration (Production - REPLACE WITH STRONG SECRET!)
# Generate with: openssl rand -base64 64
JWT_SECRET=PASTE_YOUR_64_CHAR_JWT_SECRET_HERE_CHANGE_THIS_IN_PRODUCTION
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# File Storage Configuration (Production)
STORAGE_TYPE=s3
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=20971520
AWS_REGION=ap-southeast-1
AWS_BUCKET=anigmaa-production-uploads
AWS_ACCESS_KEY=YOUR_AWS_ACCESS_KEY
AWS_SECRET_KEY=YOUR_AWS_SECRET_KEY

# Payment Gateway (Midtrans Production)
MIDTRANS_SERVER_KEY=YOUR_MIDTRANS_PRODUCTION_SERVER_KEY
MIDTRANS_CLIENT_KEY=YOUR_MIDTRANS_PRODUCTION_CLIENT_KEY
MIDTRANS_IS_PRODUCTION=true

# Google OAuth Configuration
GOOGLE_CLIENT_ID=YOUR_PRODUCTION_GOOGLE_CLIENT_ID

# CORS Configuration (Production Domains)
ALLOWED_ORIGINS=https://anigmaa.com,https://www.anigmaa.com,https://app.anigmaa.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# File Security
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
MAX_FILE_SIZE_MB=20
